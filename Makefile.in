export CC=gcc
export CFLAGS=-std=c99 -pthread @{CFLAGS} -I/usr/X11/include -D_BSD_SOURCE -D_DEFAULT_SOURCE -DPREFIX=\"@{PREFIX}\" -pedantic -Werror -Wstrict-aliasing -Wchar-subscripts -Wimplicit -Wsequence-point -Wwrite-strings -Wno-pointer-sign -Wno-parentheses -Wno-unused-result
export LDFLAGS=-pthread -L/usr/X11/lib -lm -lpng -lGL -lX11 -lxcb -lX11-xcb -lOSMesa

all:
	make -C src $@

src/medieval:
	make -C src medieval

src/editor:
	make -C src editor

check:
	$(MAKE) -C test $@

clean:
	$(MAKE) -C test $@
	$(MAKE) -C src $@

mrproper: clean
	rm -f Makefile

install:
	cp -p src/medieval @{PREFIX}bin/
	mkdir -p @{PREFIX}share/medieval/img/
	cp -rp img/*.png @{PREFIX}share/medieval/img/
	cp -rp worlds @{PREFIX}share/medieval/
	# TODO ?fonts

uninstall:
	rm -f @{PREFIX}bin/medieval
	rm -rf @{PREFIX}share/medieval/
